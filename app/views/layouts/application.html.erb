<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/header' %>
    <% if flash[:notice] %>
    <div class="alert alert-success">
      <div class="container">
        <%= flash[:notice] %>
      </div>
    </div>
    <% end %> 
    <div class="body">
      <div class="container">
        <%= yield %>
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>