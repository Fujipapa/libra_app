<% if @error_message %>
    <p class = "text-danger"><%= @error_message %></p>
<% end %>

<%= form_tag("/login") do %>
    <div class = "form-group">
        <label for = "InputEmail1">メールアドレス</label>
        <input name = "email" class = "form-control" id = "InputEmail1" value = "<%= @email %>">
    </div>
    <div class="form-group">
        <label for = "InputPassword1">パスワード</label>
        <input type = "password" class = "form-control" id = "InputPassword1" name = "password" value = "<%= @password %>">
    </div>
    <button type = "submit" class = "btn btn-info mt-2">ログイン</button>
<% end %>